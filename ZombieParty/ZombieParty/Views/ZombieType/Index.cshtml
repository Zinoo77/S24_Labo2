@model IEnumerable<ZombieType>

﻿<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">@Locals["Title"]</h2>
        </div>
        <div class="col-2 text-right">
            <a class="btn btn-success" asp-controller="ZombieType" asp-action="Create">
                <i class="fas fa-plus-square"></i>&nbsp;@Locals["New"]
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    Type Name
                </th>
                <th class="text-center">
                    Type Point
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        <a class=@(item.IsDisponible ? "btn btn-info": "btn btn-secondary") asp-action="Details" asp-route-id="@item.Id">

                            @item.TypeName <em>@(item.IsDisponible ? "" : "Indisponible")</em>
                        </a>
                    </td>
                    <td class="text-center" width="15%">@item.Point</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-info mx-2" asp-action="Edit" asp-route-Id="@item.Id">
                                <i class="fa-solid fa-pen-to-square"></i>&nbsp;@Locals["Edit"]
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@item.Id">
                                <i class="fa-solid fa-trash-can"></i>&nbsp;@Locals["Delete"]
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>